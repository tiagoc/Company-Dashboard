
<div class="form-group">
    <label>Role or user name</label>
    <input type="text" placeholder="Key value for authorization setup" ng-model="authModel.Key" name="Key" class="form-control">

</div>
<div id="" class="control-group">
    <label>Permission</label>
    <select class="form-control" ng-model="authModel.Value.permission">
        <option value="">Select one</option>
        <option selected="selected" value="view">view</option>
        <option value="edit">edit</option>
        <option value="delete">delete</option>
    </select>
</div>
<div class="form-group">
    <label>Authorization target</label>
    <select class="form-control" ng-model="authModel.Value.authTarget">
        <option value="">Select one</option>
        <option selected="selected" >roleName</option>
        <option value="userName">userName</option>
        <option value="everyOne">everyOne</option>
    </select>
</div>
<input type="button" class="btn btn-small btn-default" value="Add" ng-click="addAuthorizationModel(authModel)">
<div class="form-group">
    <div class="table-responsive">
    <table class="table" ng-show="!authorizationModel.length == 0">
    <thead>
        <th>Title</th>
        <th>#</th>
    </thead>
    <tbody>
        <tr ng-repeat="model in authorizationModel">
            <td>{{model.Key}}</td>
            <td><button class="btn btn-danger" ng-click="removeAuthorization(model)">Remove</td>
        </tr>
    </table>
</div>
 